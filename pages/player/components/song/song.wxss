.song {
  padding: 30rpx 60rpx;
  height: 100%;
  color: #fff;
}

.album image {
  width: 100%;
  border-radius: 12rpx;
  margin-top: 60rpx;
}

.title {
  margin-top: 60rpx;
  font-size: 48rpx;
  font-weight: 700;
}

.author {
  font-size: 26rpx;
  color: #ccc;
  margin: 16rpx 0;
  margin-top: 30rpx;
}

.lyric {
  font-size: 40rpx;
  text-align: center;
  margin-bottom: 60rpx;
}

.time {
  display: flex;
  justify-content: space-between;
  margin-top: 20rpx;
}

.operation {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin: 50rpx 0;
}

.operation .btn {
  display: inline-block;
  width: 60rpx;
  height: 60rpx;
}

.operation .mode {
  width: 80rpx;
  height: 80rpx;
}

.operation .pause {
  width: 130rpx;
  height: 130rpx;
}