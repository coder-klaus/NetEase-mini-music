<view wx:if="{{ songs.length }}">
  <Header title="推荐歌曲" bind:showMore="showMore" />

  <view 
    wx:for="{{ songs }}" 
    wx:key="id" 
    class="song" 
    bind:tap="playMusic"
    data-song="{{ item }}"
  >
    <image 
      class="poster" 
      src="{{ item.al.picUrl }}" 
      class="poster" 
    />

    <view class="content">
      <view class="name">{{ item.name }}</view>
      <view class="author">{{ item.ar[0].name }}</view>
    </view>

    <van-icon name="arrow" color="#999" size="16px" />
  </view>
</view>