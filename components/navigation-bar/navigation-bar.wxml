<view 
  class="nav" 
  style="margin-top: {{statusBarHeight}}px;height: {{navHeight}}px"
>
  <view class="left">
    <view class="slot">
      <slot name="left"></slot>
    </view>
    <view class="default">
      <van-icon name="arrow-left" size="22px" color="#fff" bindtap="back" />
    </view>
  </view>
  
  <view class="center">
    <view class="slot">
      <slot name="center"></slot>
    </view>  
    <view class="default">
      {{ title }}
    </view>
  </view>
  
  <view class="right"></view>
</view>